				HeardWord "open", "vocabulary", "editor"
				wait 500
				SendKeys "{ctrl+v}"
				END IF				
				IF _arg3 = "Train" THEN 
				HeardWord "train", "word"
				Wait 500
				SendKeys "{Ctrl+v}"
				Wait 200
				SendKeys "{Alt+t}"
				END IF
				IF _arg3 = "Vocabulary Train" THEN 
				HeardWord "open", "vocabulary", "editor"
				Wait 600
				SendKeys "{ctrl+v}"
				Wait 200
				SendKeys "{Alt+a}"
				wait 200
				SendKeys "{Alt+t}"
				END IF
			}
		}
