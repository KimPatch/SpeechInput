			"Line"   "Line Top"   "Line Bottom"
		}
		COMMAND "<1-20> <GLLWDUABUSs> <TrainVocabularyVT>" {
			SCRIPT {
				param$ = _arg1 + "|" + _arg2
				Wait 200
				' GLLWDUABUSs at 46
				DllCall "UttC.dll", 46, param$
				Wait 100
				SendKeys "{ctrl+c}"
